@import 'global-variables';

.page-main.policies {
  background-image: url(<%= asset_path 'bg.png' %>);
  background-repeat: repeat;
  border-bottom: 1px solid $gray-faint;
}

.policies-page-header {
  padding: 1em 1em 0;
  text-align: center;

  .svg-title {
    font-size: 16px;
    margin: 0 auto;
    max-width: 175px; // 22px tall SVG character
  }
}

.curatend-policies {
  background-color: white;
  border: 1px solid $gray-faint;
  box-sizing: border-box;
  margin: 2em auto 0;
  max-width: 60em;
  padding: 0 1em;
}

@media (min-width: 400px) {
  .curatend-policies {
    padding: 1em 2em 0;
  }
}

@media (min-width: 768px) {
  .policies-page-header {
    padding-top: 32px;
  }

  .curatend-policies {
    padding: 3em 4em 1em;
  }
}

.policy-list {
  margin-bottom: 4em;

  .policy-anchor:focus,
  .policy-anchor:hover {
    text-decoration: none;
    text-shadow: 1px 1px 1px $blue-light;
  }

  .policy-heading {
    line-height: 1.4;
    padding-bottom: 1em;
  }

  .effective-date {
    display: block;
  }
}

@media (min-width: 768px) {
  .policies-page-header .svg-title {
    max-width: 572px; // 72px tall SVG character
  }

  .policy-header {
    position: relative;

    .return-to-policy-list {
      left: 0;
      line-height: 1.2;
      position: absolute;
      top: .5em;
      width: 7em;
    }
  }
}

.policy figure {
  margin-bottom: 1em;
  text-align: center;
}

.footnotes {
  margin-bottom: 2em;

  &:before {
    border-bottom: 1px solid $gray-light;
    content: '';
    display: block;
    margin-bottom: .5em;
    margin-left: -25px;
    width: 25px;
  }

  p {
    margin-bottom: 0;
  }
}
