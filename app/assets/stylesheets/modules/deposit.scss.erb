@import 'global-variables';

.page-main.deposit-landing-page {
  background-image: url(<%= asset_path 'bg.png' %>);
  background-repeat: repeat;
  border-bottom: 1px solid $gray-faint;
}

.deposit-landing-page {
  padding: 1em 0;
  text-align: center;

  .svg-title {
    font-size: 16px;
    margin: 0 auto;
    max-width: 165px; // 22px tall SVG character
  }

  .call-to-action {
    text-align: center;
  }

  .work-type-listing {
    background: $white;
    border: 1px solid $gray-faint;
    margin-bottom: 1em;
  }
}

@media (min-width: 768px) {
  .deposit-landing-page .svg-title {
    max-width: 540px; // 72px tall SVG character
  }
}

@media (min-width: 900px) {
  .deposit-landing-page {
    padding-top: 32px;

    .call-to-action {
      margin-bottom: .5em;
    }

    .work-type-listing {
      padding: .5em;
      margin-bottom: 3em;
    }
  }
}
