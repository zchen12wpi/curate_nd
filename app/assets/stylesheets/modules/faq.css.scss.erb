@import 'global-variables';

.page-main.faq {
  background-image: url(<%= asset_path 'bg.png' %>);
  background-repeat: repeat;
  border-bottom: 1px solid $gray-faint;
}

.faq-page-header {
  padding: 1em;
  text-align: center;

  .svg-title {
    font-size: 16px;
    margin: 0 auto -3px;
    max-width: 211px; // 72px tall SVG character
    padding: 0 2em;
  }
}

@media (max-width: 550px) {
  .faq-page-header h2 {
    font-size: 20px;
    line-height: 1.2;
    margin-bottom: 0;
  }
}

.faq-wrapper {
  padding: 0 1em 1em;
}

.curate-nd-faqs {
  background-color: white;
  border: 1px solid $gray-faint;
  box-sizing: border-box;
  margin: 2em auto 0;
  max-width: 62em;
  padding: 0 1em 1em;

  h2 {
    margin-top: 1.5em;
  }

  ul {
    margin: 0;
  }

  li {
    font-size: 18px;
    line-height: 1.6;
    list-style: none;
    text-indent: -1em;
    padding-left: 1em;
  }

  dt {
    color: $official-blue;
    font-family: $header-font-family;
    font-size: 22px;
    font-weight: normal;
    line-height: 1.4;
    border-bottom: 1px solid $gray-faint;
    margin: 1.5em 0 .5em;
  }

  dd {
    font-size: 16px;
    line-height: 1.4;
    margin-bottom: 1rem;
    margin-left: 0;
  }
}

@media (min-width: 400px) {
  .curate-nd-faqs {
    padding: 0 2em 2em;
    margin-bottom: 2em;
  }
}

@media (min-width: 768px) {
  .curate-nd-faqs {
    padding: 0 4em 4em;
    margin-bottom: 6em;
  }
}

@media (min-width: 900px) {
  .faq-page-header {
    padding: 32px 1em;
  }
}
