<%# This is a search result view %>
<% solr_doc = dataset.inner_object.solr_doc %>
<li id="document_<%= dataset.noid %>" class="search-result">

  <%= render :partial => 'catalog/_index_partials/identifier_and_action', locals: {document: dataset, counter: dataset_counter} %>

  <div class="row">

    <div class="col-sm-2">
      <%= render :partial => 'catalog/_index_partials/thumbnail_display', locals: {document: dataset} %>
    </div>

    <div class="col-sm-10">
      <dl class="attribute-list">
        <% if solr_doc.has?('desc_metadata__creator_tesim') %>
          <dt>Creator(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__creator_tesim') %></dd>
        <% end %>

        <% if solr_doc.has?('desc_metadata__description_tesim') %>
          <dt>Description:</dt>
          <dd class="readmore"><%= escape_html_for_solr_text(truncate(render_index_field_value(document: solr_doc, field: 'desc_metadata__description_tesim'), length: 500)).to_s.html_safe %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__publication_date_tesim') %>
          <dt>Date Published:</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__publication_date_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__date_created_tesim') %>
          <dt>Date Created:</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__date_created_tesim') %></dd>
        <% end %>
        <dt>Record Visibility: </dt>
        <dd><%= AccessRenderer.new(nil, solr_doc).badge(show_date: false) %></dd>
      </dl>

    </div>

  </div>

</li>
