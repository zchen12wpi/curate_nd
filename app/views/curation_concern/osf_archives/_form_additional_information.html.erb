<fieldset class="optional prompt">
  <legend>Additional Information</legend>
  <%= f.input :osf_project_identifier, label: "OSF Project Identifier", input_html: { class: 'input-xlarge' } %>
  <%= f.input :affiliation,
              label: 'Academic Status',
              as: :select,
              collection: affiliations,
              input_html: { class: 'input-xlarge' }
  %>
  <%= f.input :subject,                 as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :creator,                 as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :date_created,            input_html: { class: 'input-xlarge datepicker' } %>
  <%= f.input :language,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :alephIdentifier,         as: :multi_value, label: "Aleph Record Number" , input_html: { class: 'input-xlarge' } %>
</fieldset>
