<%# This is a search result view %>
<% solr_doc = video.inner_object.solr_doc %>
<li id="document_<%= video.noid %>" class="search-result">

  <%= render :partial => 'catalog/_index_partials/identifier_and_action', locals: {document: video, counter: video_counter} %>

  <div class="row">

    <div class="col-sm-2">
      <%= render :partial => 'catalog/_index_partials/thumbnail_display', locals: {document: video} %>
    </div>

    <div class="col-sm-10">
      <dl class="attribute-list">
        <% if solr_doc.has?('desc_metadata__description_tesim') %>
          <dt>Description(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__description_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__performer_tesim') %>
          <dt>Performer(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__performer_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__director_tesim') %>
          <dt>Director(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__director_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__screenwriter_tesim') %>
          <dt>Screenwriter(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__screenwriter_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__interviewer_tesim') %>
          <dt>Interviewer(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__interviewer_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__interviewee_tesim') %>
          <dt>Interviewee(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__interviewee_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__speaker_tesim') %>
          <dt>Speaker(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__speaker_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__producer_tesim') %>
          <dt>Producer(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__producer_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__creator_tesim') %>
          <dt>Creator(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__creator_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__contributor_tesim') %>
          <dt>Contributor(s):</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__contributor_tesim') %></dd>
        <% end %>
        <% if solr_doc.has?('desc_metadata__publication_date_tesim') %>
          <dt>Date Published:</dt>
          <dd><%= render_index_field_value(document: solr_doc, field: 'desc_metadata__publication_date_tesim') %></dd>
        <% end %>
        <dt>Record Visibility: </dt>
        <dd><%= AccessRenderer.new(nil, solr_doc).badge(show_date: false) %></dd>
      </dl>

    </div>

  </div>

</li>
