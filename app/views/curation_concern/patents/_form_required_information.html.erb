<fieldset class="required">
  <legend>Required Information</legend>
  <%= f.input :title, input_html: { class: 'input-xxlarge'}, required: true %>

  <%= f.input :description, input_html: { class: 'input-xxlarge rich-textarea-js', rows: '9' }, as: :text, required: true %>

  <%= f.input :patent_number, input_html: { class: 'input-xlarge' },required: true %>

  <%= render 'form_administrative_unit', curation_concern: curation_concern, f: f, select_label_id: 'add-to-administrative-unit', button_class: 'btn btn-primary' %>
</fieldset>
