<%
  if params[:id] = 'library_collections_pathnames_hierarchy_with_titles_sim'
    behavior_class = 'collapsible'
  else
    behavior_class = ''
  end

  page_title = t("curate.catalog.facet_page_title.#{params[:id]}").html_safe
  content_for :page_title, "#{page_title} // CurateND"
  content_for :page_header do %>
  <h1><%= page_title %></h1>
<% end %>
<% content_for :main_column_class, 'hierarchical-facet-page col-sm-12'  %>
<div class="hierarchical-value modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3><%= t("curate.catalog.facet_title.#{params[:id]}").html_safe %></h3>
</div>

<div class="modal-body">
  <%
    help_text = t("curate.catalog.help_text.#{params[:id]}").html_safe
    unless help_text.blank?
  %>
    <p>
      <%= help_text %>
    </p>
  <% end %>

  <ul class="facet-hierarchy <%= behavior_class %>">
    <%= render_hierarchy(facet_configuration_for_field(params[:id])) %>
  </ul>
</div>
