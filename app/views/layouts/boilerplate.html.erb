    <% else %>
      <p class="environment-notice"><strong>WARNING: </strong> This site is running in <%= Rails.env %>. Production data will not be changed.</p>
    <% end %>

    <%= render :partial => '/shared/repo_manager_controls', formats: [:html] %>
    <%= render :partial => '/shared/masquerade_controls', formats: [:html] %>

    <%= content_for?(:body) ? yield(:body) : yield %>

    <% unless Rails.env.production? %>
    <!-- Rendered through: <%= yield(:layout_name) %>boilerplate -->
    <% end %>
    <%= yield(:modal_windows) %>
    <div id="ajax-modal" class="modal fade" role="dialog" tabindex="-1"></div>
  </body>
</html>
