  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title><%= content_for?(:page_title) ? yield(:page_title) : default_page_title %></title>
    <%= content_for?(:google_scholar_metadata_tags) ? yield(:google_scholar_metadata_tags) : '' %>
    <meta name="viewport" content="width=device-width">
    <%= csrf_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'screen, print' %>
    <%= stylesheet_link_tag 'simplemde.min', media: 'screen, print' if include_rich_text_editor? %>
    <%= javascript_include_tag 'modernizr' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'rich_text_editor' if include_rich_text_editor? %>
    <%= render :partial => '/ga', :formats => [:html] -%>
  </head>
  <body>
    <% if Rails.env.production? %>
      <script type="text/javascript">var _monsido = _monsido || []; _monsido.push(['_setDomainToken', 'fZwOU4KIyMK3aSmBVVw89A']); _monsido.push(['_withStatistics', 'true']);</script>
