<% content_for :page_title, curation_concern_page_title(@group) %>
<% content_for :page_header do %>
  <h1> <%= @group.title %> </h1>
<% end %>
<% if can? :edit, @group %>
  <% content_for :page_actions do %>

  <%= button_to(
    "Delete",
    {
      action: :destroy,
      controller: "hydramata/groups",
      id: @group.id
    },
    data: {confirm: 'Are you sure you want to delete this group?'},
    class: 'btn btn-primary',
    form_class: 'button-to pull-right',
    method: :delete
  )%>

    <%= link_to 'Edit', edit_hydramata_group_path(@group), class: 'btn btn-default' %>
  <% end %>
<% end %>
<div class="group-description">
  <%= @group.description %>
</div>

<h3> Members of this group: </h3>
<div class="group-members">
  <ul class="collection-listing">
    <% @group.members.each do |member| %>
      <% nameLabel = member.name.present? ? member.name : member.user.username %>
      <% nameLabel += @group.edit_users.include?(member.user.username) ? " (Owner)" : ""%>
      <li class='collection-member'><%= link_to nameLabel, person_path(member) %></li>
    <% end %>
  </ul>
</div>
