<%
  form_legend = 'CurateND: Technical Support'
  request_label = 'How can we help you?'
%>

<%= simple_form_for(help_request) do |f| %>

<fieldset class="hidden">
  <dl class="stacked">
    <dt>Your Username</dt>
    <dd id="help-username">
      <%= help_request.user_name%>
    </dd>
    <dt>Screen Size</dt>
    <dd id="help-resolution">
      <%= help_request.resolution || 'Unknown' %>
    </dd>
    <dt>Browser Size</dt>
    <dd id="help-viewport">
      <%= help_request.view_port || 'Unknown'  %>
    </dd>
    <dt>JavaScript</dt>
    <dd id="help-js">
      <% if help_request.javascript_enabled %>
      is enabled
      <% else %>
      is <strong>NOT</strong> enabled
      <% end %>
    </dd>
    <dt>Browser</dt>
    <dd id="help-browser">
      <%= help_request.browser_name %>
    </dd>
    <dt>Platform</dt>
    <dd id="help-platform">
      <%= help_request.platform %>
    </dd>
    <dt><%= t('sufia.product_name') %> Version</dt>
    <dd id="help-platform">
      <%= Curate.configuration.build_identifier %>
    </dd>
    <dt>Current URL</dt>
    <dd id="help-url" class="help-url<%= ' unset'.html_safe if help_request.current_url? %>">
      <%= help_request.current_url %>
    </dd>
  </dl>
</fieldset>

<fieldset class="required with-side-padding">
  <legend><%= form_legend %></legend>
  <%= f.input :view_port, as: 'hidden' %>
  <%= f.input :resolution, as: 'hidden' %>
  <% if help_request.current_url.blank? %>
  <%= f.input :current_url, as: 'hidden', input_html: { class: 'unset' } %>
  <% else -%>
  <%= f.input :current_url, as: 'hidden' %>
  <% end -%>
  <%= f.input :javascript_enabled, as: 'hidden' %>
  <%= f.input :name, input_html: { value: help_request.form_name } %>
  <%= f.input :email, input_html: { value: help_request.form_email } %>
  <legend>Describe Your Issue</legend>
  <%= f.input :how_can_we_help_you, as: 'text', label: request_label, input_html: { class: 'input-xxxlarge', rows: '10' } %>
</fieldset>

<div class="form-actions">
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <a href="#" id="never-mind" class="btn btn-link" data-dismiss="modal">Cancel</a>
</div>
<% end %>
